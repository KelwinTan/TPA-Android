<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activity.PlaceInformationActivity"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="350dp"
                android:layout_height="250dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/text_place_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_view"
                android:layout_marginTop="15dp"
                android:textSize="22sp"/>

            <TextView
                android:id="@+id/text_place_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_place_name"
                android:layout_marginTop="10dp"/>
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btn_edit_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Settings"
                android:background="@drawable/custom_button"
                android:textColor="#ffffff"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/btn_place_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Place Summary"
                android:background="@drawable/custom_button"
                android:textColor="#ffffff"
                android:layout_marginTop="5dp"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp">

            <TextView
                android:id="@+id/text_report_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Report List"
                android:textSize="22sp"
                android:gravity="center"
                android:visibility="gone"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_place_information_report"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/text_report_list">
            </androidx.recyclerview.widget.RecyclerView>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>
