<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/root_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddReportActivity"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="350dp"
            android:layout_height="250dp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Report Title"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_marginTop="25dp"/>

        <EditText
            android:id="@+id/edit_report_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edit_text"
            android:padding="8dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Report Description"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/edit_report_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_edit_text"
            android:padding="8dp"/>

        <Spinner
            android:id="@+id/spinner_report_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:spinnerMode="dropdown"/>

        <Button
            android:id="@+id/btn_insert_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Insert Report"
            android:background="@drawable/custom_button"
            android:layout_marginTop="15dp"/>

    </LinearLayout>

</RelativeLayout>